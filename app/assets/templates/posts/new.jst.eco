<form id="new_post">
  <legend>New Post</legend>
  <label>Title</label>
  <input class="input-xxlarge" type="text" name="title" id="new_post_title" placeholder="Put title here...">
  <label>Content</label>
  <textarea class="input-xxlarge" placeholder="Put content here..." id="new_post_content" name="content" />
  <div class="controls">
    <a class="btn" href="#">Cancel</a>
    <button class="btn btn-primary" type="submit">Post</button>
  </div>
</form>